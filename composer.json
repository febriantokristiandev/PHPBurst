{
    "name": "phpburst/framework",
    "description": "A custom PHP framework inspired by Laravel.",
    "type": "project",
    "require": {
        "php": "^8.0",
        "workerman/workerman": "^4.0",
        "nikic/fast-route": "^1.3.0",
        "twig/twig": "^3.5",
        "illuminate/database": "^8.83",
        "vlucas/phpdotenv": "^5.6",
        "filp/whoops": "^2.15",
        "defuse/php-encryption": "^2.2",
        "predis/predis": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "scripts": {
        "start": "php bootstrap/app.php"
    }
}
